<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white">

    <include layout="@layout/store_layout_toolbar" />
    
    <LinearLayout
        android:id="@+id/resetpassword_panel1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/store_edittext_background_white_corners"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="原    密   码:"
            android:textColor="@color/store_black"
            android:textSize="@dimen/textSize_15"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/resetpassword_et_password1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@android:color/white"
            android:textColor="@color/store_black"
            android:textSize="@dimen/textSize_11"
            android:hint="请输入原登录密码"
            android:textColorHint="@color/store_light_gary"
            android:lines="1"
            android:ellipsize="end"
            android:inputType="textPassword"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/resetpassword_panel2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/store_edittext_background_white_corners"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="新    密   码:"
            android:textColor="@color/store_black"
            android:textSize="@dimen/textSize_15"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/resetpassword_et_password2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@android:color/white"
            android:textColor="@color/store_black"
            android:textSize="@dimen/textSize_11"
            android:hint="请输入要设置的新登录密码"
            android:textColorHint="@color/store_light_gary"
            android:lines="1"
            android:ellipsize="end"
            android:inputType="textPassword"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/resetpassword_panel3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/store_edittext_background_white_corners"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确认新密码:"
            android:textColor="@color/store_black"
            android:textSize="@dimen/textSize_15"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/resetpassword_et_password3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@android:color/white"
            android:textColor="@color/store_black"
            android:textSize="@dimen/textSize_11"
            android:hint="请再次输入新登录密码"
            android:textColorHint="@color/store_light_gary"
            android:lines="1"
            android:ellipsize="end"
            android:inputType="textPassword"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置密码必须包含数字、字母"
        android:textColor="@color/store_dark_gary"
        android:textSize="@dimen/textSize_9"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/resetpassword_btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/store_button_background_red_corners_selector"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="确定修改"
        android:textSize="@dimen/textSize_16"
        android:textColor="@android:color/white"/>

</LinearLayout>