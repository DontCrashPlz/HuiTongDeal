<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="61dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/background_black_light"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/item_deal_green_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="普油合约"
                android:textSize="@dimen/textSize_15"
                android:textColor="@android:color/white"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/item_deal_green_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="认购"
                android:textColor="#00F601"
                android:textSize="@dimen/textSize_9"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_below="@+id/item_deal_green_name"
                android:background="@drawable/textview_background_deal_item_green"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XAG"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize_9"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:layout_below="@+id/item_deal_green_name"
                android:layout_toRightOf="@+id/item_deal_green_icon"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/item_deal_green_jiancang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0000.00"
            android:textSize="@dimen/textSize_15"
            android:textColor="#FF9800"/>
        <TextView
            android:id="@+id/item_deal_green_pingcang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0000.00"
            android:textSize="@dimen/textSize_15"
            android:textColor="@color/background_button_orange"/>
        <TextView
            android:id="@+id/item_deal_green_yingkui"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0000.00"
            android:textSize="@dimen/textSize_15"
            android:textColor="@color/background_button_orange"/>

    </LinearLayout>

</LinearLayout>