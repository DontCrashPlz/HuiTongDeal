<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white">

    <include layout="@layout/store_layout_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@android:color/white"
        android:gravity="center">
        <TextView
            android:id="@+id/tixian_detail_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现成功"
            android:textColor="@color/store_black"
            android:textSize="@dimen/textSize_15"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:id="@+id/bill_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现金额"
            android:textColor="@color/store_black"
            android:textSize="@dimen/textSize_14"
            android:layout_marginTop="16dp"/>
        <TextView
            android:id="@+id/tixian_detail_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textSize="@dimen/textSize_14"
            android:textColor="@color/store_black"
            android:layout_alignBottom="@+id/bill_text1"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/voucher_8"
            android:drawablePadding="4dp"/>
        <TextView
            android:id="@+id/bill_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现状态"
            android:textColor="@color/store_black"
            android:textSize="@dimen/textSize_14"
            android:layout_marginTop="14dp"
            android:layout_below="@id/bill_text1"/>
        <TextView
            android:id="@+id/tixian_detail_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未知"
            android:textSize="@dimen/textSize_14"
            android:textColor="@color/store_black"
            android:layout_alignBottom="@+id/bill_text2"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/bill_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            android:textColor="@color/store_black"
            android:textSize="@dimen/textSize_14"
            android:layout_marginTop="14dp"
            android:layout_below="@id/bill_text2"/>
        <TextView
            android:id="@+id/tixian_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000-01-01 00:00:00"
            android:textSize="@dimen/textSize_14"
            android:textColor="@color/store_black"
            android:layout_alignBottom="@+id/bill_text3"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/bill_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易单号"
            android:textColor="@color/store_black"
            android:textSize="@dimen/textSize_14"
            android:layout_marginTop="14dp"
            android:layout_below="@id/bill_text3"/>
        <TextView
            android:id="@+id/tixian_detail_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00000000000000000"
            android:textSize="@dimen/textSize_14"
            android:textColor="@color/store_black"
            android:layout_alignBottom="@+id/bill_text4"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/bill_text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户余额"
            android:textColor="@color/store_black"
            android:textSize="@dimen/textSize_14"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/bill_text4"/>
        <TextView
            android:id="@+id/tixian_detail_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000.00"
            android:textSize="@dimen/textSize_14"
            android:textColor="@color/store_black"
            android:layout_alignBottom="@+id/bill_text5"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/voucher_8"
            android:drawablePadding="4dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="详情"
        android:textColor="@color/store_black"
        android:textSize="@dimen/textSize_14"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tixian_detail_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拒绝原因"
        android:textSize="@dimen/textSize_14"
        android:textColor="@color/store_red"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

</LinearLayout>