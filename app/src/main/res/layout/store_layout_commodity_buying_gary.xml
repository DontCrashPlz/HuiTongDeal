<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/background_white">

    <CheckBox
        android:id="@+id/commodity_shopping_cb"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="gone"/>
    
    <ImageView
        android:id="@+id/commodity_shopping_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/commodity_shopping_cb"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/commodity_shopping_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="商品名称"
        android:textSize="@dimen/textSize_13"
        android:textColor="#2B2525"
        app:layout_constraintTop_toTopOf="@+id/commodity_shopping_image"
        app:layout_constraintLeft_toRightOf="@+id/commodity_shopping_image"
        android:layout_marginLeft="10dp"
        app:layout_constraintRight_toLeftOf="@+id/textView3"
        android:layout_marginRight="6dp" />

    <TextView
        android:id="@+id/commodity_shopping_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品描述"
        android:textSize="@dimen/textSize_12"
        android:textColor="#999999"
        app:layout_constraintLeft_toLeftOf="@+id/commodity_shopping_name"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/commodity_shopping_name" />

    <TextView
        android:id="@+id/commodity_shopping_price_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textSize="@dimen/textSize_11"
        android:textColor="#FB8F02"
        app:layout_constraintBottom_toBottomOf="@+id/commodity_shopping_image"
        android:layout_marginBottom="6dp"
        app:layout_constraintLeft_toRightOf="@+id/commodity_shopping_image"
        android:layout_marginLeft="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/瓶"
        android:textSize="@dimen/textSize_11"
        android:textColor="#FB8F02"
        app:layout_constraintLeft_toRightOf="@+id/commodity_shopping_price_yellow"
        app:layout_constraintBottom_toBottomOf="@+id/commodity_shopping_price_yellow"
        app:layout_constraintTop_toTopOf="@+id/commodity_shopping_price_yellow" />

    <TextView
        android:id="@+id/commodity_shopping_price_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textSize="@dimen/textSize_11"
        android:textColor="#DA251C"
        app:layout_constraintLeft_toLeftOf="@+id/commodity_shopping_price_yellow"
        app:layout_constraintBottom_toTopOf="@+id/commodity_shopping_price_yellow" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/瓶"
        android:textSize="@dimen/textSize_11"
        android:textColor="#DA251C"
        app:layout_constraintLeft_toRightOf="@+id/commodity_shopping_price_red"
        app:layout_constraintBottom_toBottomOf="@+id/commodity_shopping_price_red"
        app:layout_constraintTop_toTopOf="@+id/commodity_shopping_price_red" />

    <TextView
        android:id="@+id/commodity_shopping_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x1"
        android:textColor="#333333"
        android:textSize="@dimen/textSize_12"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/commodity_shopping_remark" />

</android.support.constraint.ConstraintLayout>