<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_blue"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:paddingLeft="20dp">

        <ImageView
            android:id="@+id/store_mine_usericon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/user_head_store"/>

        <TextView
            android:id="@+id/store_mine_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13000000000"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_11"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/store_mine_usericon"
            android:layout_alignBottom="@+id/store_mine_usericon"/>

        <TextView
            android:id="@+id/store_mine_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_13"
            android:layout_alignLeft="@+id/store_mine_mobile"
            android:layout_above="@+id/store_mine_mobile"
            android:layout_marginBottom="3dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp">
            <TextView
                android:id="@+id/store_mine_time"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="01/01/2000 周一"
                android:textSize="@dimen/textSize_11"
                android:textColor="@android:color/white"
                android:gravity="top"/>
            <TextView
                android:id="@+id/home_mine_balance"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/home_mine_balance"
                android:textSize="@dimen/textSize_11"
                android:textColor="@android:color/white"
                android:drawableRight="@mipmap/shopping_voucher_white"
                android:drawablePadding="3dp"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/home_mine_security"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/home_mine_tihuo"
                android:textSize="@dimen/textSize_11"
                android:textColor="@android:color/white"
                android:drawableRight="@mipmap/bill_lading_white"
                android:drawablePadding="3dp"
                android:gravity="bottom"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_mine_btn_chongzhi"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/button_background_white_selector"
        android:gravity="center_vertical"
        android:clickable="true">
        <com.zheng.zchlibrary.widgets.AlignTextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            app:text="购买购物券"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/textSize_14"
            android:layout_marginLeft="40dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wallet_voucher"
            android:layout_marginLeft="10dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/enter"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_mine_btn_tixian"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/button_background_white_selector"
        android:gravity="center_vertical"
        android:clickable="true">
        <com.zheng.zchlibrary.widgets.AlignTextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            app:text="提现"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/textSize_14"
            android:layout_marginLeft="40dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/recharge_unionpay_01"
            android:layout_marginLeft="10dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/enter"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/home_mine_btn_bill"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/button_background_white_selector"
        android:gravity="center_vertical"
        android:clickable="true">
        <com.zheng.zchlibrary.widgets.AlignTextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            app:text="账单"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/textSize_14"
            android:layout_marginLeft="40dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bill_01"
            android:layout_marginLeft="10dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/enter"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/home_mine_btn_return"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/button_background_white_selector"
        android:gravity="center_vertical"
        android:clickable="true">
        <com.zheng.zchlibrary.widgets.AlignTextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            app:text="返回商城"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/textSize_14"
            android:layout_marginLeft="40dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/store_back"
            android:layout_marginLeft="10dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/enter"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/home_mine_btn_logout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/button_background_white_selector"
        android:gravity="center_vertical"
        android:clickable="true">
        <com.zheng.zchlibrary.widgets.AlignTextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            app:text="退出登录"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/textSize_14"
            android:layout_marginLeft="40dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/sign_out_store"
            android:layout_marginLeft="10dp" />
    </RelativeLayout>

</LinearLayout>