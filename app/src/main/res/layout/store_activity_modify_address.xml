<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white">

    <include layout="@layout/store_layout_toolbar" />

    <LinearLayout
        android:id="@+id/modify_address_panel1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/store_edittext_background_white_corners"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginRight="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="20dp">
        <com.zheng.zchlibrary.widgets.AlignTextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            app:text="收货人"
            android:textSize="@dimen/textSize_16"
            android:textColor="@color/store_black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": "
            android:textSize="@dimen/textSize_16"
            android:textColor="@color/store_black"/>
        <EditText
            android:id="@+id/modify_address_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textSize="@dimen/textSize_16"
            android:textColor="@color/store_black"
            android:hint="请输入收货人"
            android:textColorHint="@color/store_light_gary"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/modify_address_panel2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/store_edittext_background_white_corners"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginRight="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="5dp">
        <com.zheng.zchlibrary.widgets.AlignTextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            app:text="联系方式"
            android:textSize="@dimen/textSize_16"
            android:textColor="@color/store_black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": "
            android:textSize="@dimen/textSize_16"
            android:textColor="@color/store_black"/>
        <EditText
            android:id="@+id/modify_address_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textSize="@dimen/textSize_16"
            android:textColor="@color/store_black"
            android:hint="请输入收货人电话号码"
            android:textColorHint="@color/store_light_gary"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/modify_address_panel3"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/store_edittext_background_white_corners"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginRight="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="5dp">
        <com.zheng.zchlibrary.widgets.AlignTextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            app:text="区域选择"
            android:textSize="@dimen/textSize_16"
            android:textColor="@color/store_black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": "
            android:textSize="@dimen/textSize_16"
            android:textColor="@color/store_black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/modify_address_province"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="请选择.."
                android:textSize="@dimen/textSize_14"
                android:textColor="@color/store_black"
                android:drawableRight="@mipmap/address_arrow"
                android:gravity="center"
                android:paddingRight="5dp"
                android:clickable="true"
                android:lines="1"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/modify_address_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="请选择.."
                android:textSize="@dimen/textSize_14"
                android:textColor="@color/store_black"
                android:drawableRight="@mipmap/address_arrow"
                android:gravity="center"
                android:paddingRight="5dp"
                android:clickable="true"
                android:lines="1"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/modify_address_area"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="请选择.."
                android:textSize="@dimen/textSize_14"
                android:textColor="@color/store_black"
                android:drawableRight="@mipmap/address_arrow"
                android:gravity="center"
                android:paddingRight="5dp"
                android:clickable="true"
                android:lines="1"
                android:ellipsize="end"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/modify_address_panel4"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/store_edittext_background_white_corners"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginRight="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="5dp">
        <com.zheng.zchlibrary.widgets.AlignTextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            app:text="邮政编码"
            android:textSize="@dimen/textSize_16"
            android:textColor="@color/store_black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": "
            android:textSize="@dimen/textSize_16"
            android:textColor="@color/store_black"/>
        <EditText
            android:id="@+id/modify_address_zip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textSize="@dimen/textSize_16"
            android:textColor="@color/store_black"
            android:hint="请输入邮编"
            android:textColorHint="@color/store_light_gary"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/modify_address_panel5"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/store_edittext_background_white_corners"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginRight="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="5dp">
        <EditText
            android:id="@+id/modify_address_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textSize="@dimen/textSize_16"
            android:textColor="@color/store_black"
            android:hint="填写您的详细地址"
            android:textColorHint="@color/store_light_gary"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    
    <Button
        android:id="@+id/modify_address_commit"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:background="@drawable/store_button_background_red_corners_selector"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="保存地址"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize_16"/>

</LinearLayout>