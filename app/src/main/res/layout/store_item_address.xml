<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/button_background_white_selector"
    app:cardCornerRadius="5dp"
    android:layout_margin="4dp"
    app:contentPadding="10dp"
    app:cardElevation="0dp"
    android:clickable="true"
    android:id="@+id/address_panel">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/address_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="河南省 郑州市 管城区"
            android:textColor="#555555"
            android:textSize="@dimen/textSize_13"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/address_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XX路XX大厦XX楼XX室"
            android:textColor="#555555"
            android:textSize="@dimen/textSize_13"
            android:layout_below="@+id/address_area"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/address_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三"
            android:textColor="#333333"
            android:textSize="@dimen/textSize_14"
            android:layout_below="@+id/address_detail"
            android:layout_marginTop="10dp"/>

        <View
            android:id="@+id/address_devide"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_below="@+id/address_name"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/address_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设为默认"
            android:textSize="@dimen/textSize_11"
            android:textColor="@color/store_checkbox_default_addrss"
            android:layout_below="@+id/address_devide"
            android:paddingTop="6dp"
            android:drawableLeft="@mipmap/address_check"
            android:drawablePadding="3dp"
            android:clickable="true"/>

        <TextView
            android:id="@+id/address_youbian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="450000"
            android:textColor="#555555"
            android:textSize="@dimen/textSize_13"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/address_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="130****0000"
            android:textColor="#333333"
            android:textSize="@dimen/textSize_14"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/address_name"/>

        <TextView
            android:id="@+id/address_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textSize="@dimen/textSize_11"
            android:textColor="@color/store_light_gary"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/address_default"
            android:drawableLeft="@mipmap/address_trash_normal"
            android:drawablePadding="3dp"
            android:paddingTop="6dp"
            android:clickable="true"/>

        <TextView
            android:id="@+id/address_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改"
            android:textSize="@dimen/textSize_11"
            android:textColor="@color/store_light_gary"
            android:layout_alignTop="@+id/address_default"
            android:layout_toLeftOf="@+id/address_delete"
            android:layout_marginRight="15dp"
            android:drawableLeft="@mipmap/address_modify_normal"
            android:drawablePadding="3dp"
            android:paddingTop="6dp"
            android:clickable="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>