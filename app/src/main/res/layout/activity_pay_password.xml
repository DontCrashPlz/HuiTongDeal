<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_black">

    <include layout="@layout/layout_toolbar" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@color/background_black_light"
        android:paddingRight="15dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="登录密码"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_15"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/paypass_et_loginpass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/background_black_light"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_12"
            android:hint="请输入登录密码"
            android:textColorHint="#60FFFFFF"
            android:lines="1"
            android:ellipsize="end"
            android:inputType="textPassword"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="@color/background_black_light"
        android:paddingRight="15dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="手机号码"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_15"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/paypass_et_mobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/background_black_light"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_12"
            android:hint="请输入手机号码"
            android:textColorHint="#60FFFFFF"
            android:lines="1"
            android:ellipsize="end"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="@color/background_black_light"
        android:paddingRight="15dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="验证码"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_15"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/paypass_et_verification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/background_black_light"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_12"
            android:hint="请输入验证码"
            android:textColorHint="#60FFFFFF"
            android:lines="1"
            android:ellipsize="end"
            android:inputType="number"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/paypass_btn_get_verification"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:text="获取验证码"
                android:textSize="@dimen/textSize_9"
                android:textColor="@android:color/white"
                android:background="@drawable/button_background_green_corners_selector"
                android:layout_gravity="right"/>
        </FrameLayout>
    </LinearLayout>
    
    <Button
        android:id="@+id/paypass_btn_next"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_background_orange_selector"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="下一步"
        android:textSize="@dimen/textSize_18"
        android:textColor="@android:color/white"/>

</LinearLayout>