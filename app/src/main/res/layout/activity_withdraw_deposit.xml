<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_black">

    <include layout="@layout/layout_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@color/background_black_light"
            android:paddingRight="15dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="姓名"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize_15"
                android:paddingLeft="10dp"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/background_black_light"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize_12"
                android:hint="请输入真实姓名"
                android:textColorHint="#60FFFFFF"
                android:lines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="@color/background_black_light"
            android:paddingRight="15dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="银行卡号"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize_15"
                android:paddingLeft="10dp"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/background_black_light"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize_12"
                android:hint="请输入银行卡号"
                android:textColorHint="#60FFFFFF"
                android:lines="1"
                android:ellipsize="end"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="@color/background_black_light"
            android:paddingRight="15dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="提现金额"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize_15"
                android:paddingLeft="10dp"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/background_black_light"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize_12"
                android:hint="@string/hint_withdraw_deposit"
                android:textColorHint="#60FFFFFF"
                android:lines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_background_green_selector"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="提现"
            android:textSize="@dimen/textSize_18"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:visibility="gone">

        <include layout="@layout/layout_tixian_complete" />
        
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="查看我的账户"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_18"
            android:background="@drawable/button_background_blue_selector"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="60dp"/>

    </LinearLayout>

</LinearLayout>