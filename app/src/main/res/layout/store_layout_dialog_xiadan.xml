<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">
        <ImageView
            android:id="@+id/store_xiadan_dialog_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/darker_gray" />
        <ImageView
            android:id="@+id/store_xiadan_dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/close2"
            android:layout_alignParentRight="true"
            android:clickable="true"/>
        <TextView
            android:id="@+id/store_xiadan_dialog_inventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_detail_inventory"
            android:textColor="@color/store_dark_gary"
            android:textSize="@dimen/textSize_12"
            android:layout_toRightOf="@+id/store_xiadan_dialog_image"
            android:layout_alignBottom="@+id/store_xiadan_dialog_image"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/store_xiadan_dialog_image"
            android:layout_above="@+id/store_xiadan_dialog_inventory"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/store_xiadan_dialog_gouwuquan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/store_red"
                android:textSize="@dimen/textSize_14"
                android:drawableRight="@mipmap/home_shopping_voucher"
                android:drawablePadding="2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textColor="@color/store_red"
                android:textSize="@dimen/textSize_14"/>
            <TextView
                android:id="@+id/store_xiadan_dialog_tihuoquan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/store_yellow"
                android:textSize="@dimen/textSize_14"
                android:drawableRight="@mipmap/home_bill"
                android:drawablePadding="2dp"/>
        </LinearLayout>
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E5E5"/>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买数量"
            android:textSize="@dimen/textSize_13"
            android:textColor="@color/store_black"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical|right">
            <Button
                android:id="@+id/store_xiadan_dialog_sub"
                android:layout_width="30dp"
                android:layout_height="23dp"
                android:background="#CCCCCC"
                android:text="-"
                android:textColor="@color/store_dark_gary"
                android:textSize="@dimen/textSize_12"
                android:gravity="center"/>
            <TextView
                android:id="@+id/store_xiadan_dialog_count"
                android:layout_width="30dp"
                android:layout_height="23dp"
                android:background="#F6F6F6"
                android:text="1"
                android:textColor="@color/store_dark_gary"
                android:textSize="@dimen/textSize_12"
                android:gravity="center"/>
            <Button
                android:id="@+id/store_xiadan_dialog_plus"
                android:layout_width="30dp"
                android:layout_height="23dp"
                android:background="#CCCCCC"
                android:text="+"
                android:textColor="@color/store_dark_gary"
                android:textSize="@dimen/textSize_12"
                android:gravity="center"/>
        </LinearLayout>
    </FrameLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E5E5"/>
    
    <Button
        android:id="@+id/store_xiadan_dialog_commit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="确定"
        android:textSize="@dimen/textSize_18"
        android:textColor="@android:color/white"
        android:background="@color/store_red"
        android:layout_marginTop="30dp"/>

</LinearLayout>