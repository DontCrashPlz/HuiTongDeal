<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_marginTop="1dp">
    <LinearLayout
        android:id="@+id/item_deal_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/recycler_background_black_selector"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:clickable="true">
        
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/item_deal_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="普油合约"
                android:textSize="@dimen/textSize_14"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/item_deal_text2"
                android:layout_width="30dp"
                android:layout_height="12dp"
                android:text="认购"
                android:textColor="@color/background_button_orange"
                android:textSize="@dimen/textSize_8"
                android:layout_below="@+id/item_deal_text1"
                android:background="@drawable/textview_background_deal_item_orange"
                android:gravity="center"
                android:layout_marginTop="2dp"/>
            <TextView
                android:id="@+id/item_deal_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000000000000"
                android:textColor="#80ffffff"
                android:textSize="@dimen/textSize_8"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">
                <TextView
                    android:id="@+id/item_deal_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="建仓"
                    android:textSize="@dimen/textSize_9"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/item_deal_text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="@color/background_button_orange"
                    android:textSize="@dimen/textSize_9"
                    android:paddingLeft="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <TextView
                    android:id="@+id/item_deal_text6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最新"
                    android:textSize="@dimen/textSize_9"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/item_deal_text7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="@color/background_button_green"
                    android:textSize="@dimen/textSize_9"
                    android:paddingLeft="10dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">
                <TextView
                    android:id="@+id/item_deal_text8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="止盈"
                    android:textSize="@dimen/textSize_9"
                    android:textColor="@color/background_button_orange"/>
                <TextView
                    android:id="@+id/item_deal_text9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="@color/background_button_orange"
                    android:textSize="@dimen/textSize_9"
                    android:paddingLeft="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <TextView
                    android:id="@+id/item_deal_text10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="止损"
                    android:textSize="@dimen/textSize_9"
                    android:textColor="@color/background_button_green"/>
                <TextView
                    android:id="@+id/item_deal_text11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="@color/background_button_green"
                    android:textSize="@dimen/textSize_9"
                    android:paddingLeft="10dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">
                <TextView
                    android:id="@+id/item_deal_text12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投资总额"
                    android:textSize="@dimen/textSize_9"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/item_deal_text13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="@color/background_button_orange"
                    android:textSize="@dimen/textSize_9"
                    android:paddingLeft="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <TextView
                    android:id="@+id/item_deal_text14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预期收益"
                    android:textSize="@dimen/textSize_9"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/item_deal_text15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="@color/background_button_orange"
                    android:textSize="@dimen/textSize_9"
                    android:paddingLeft="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <TextView
                    android:id="@+id/item_deal_text16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2000-01-01 00:00:00"
                    android:textSize="@dimen/textSize_8"
                    android:textColor="#80ffffff"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>