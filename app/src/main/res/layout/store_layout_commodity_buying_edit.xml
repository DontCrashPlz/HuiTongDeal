<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@android:color/white"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="15dp">
    
    <CheckBox
        android:id="@+id/commodity_shopping_checkbox"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_centerVertical="true"
        android:background="@drawable/store_checkbox_address_default"
        android:button="@null" />

    <ImageView
        android:id="@+id/commodity_shopping_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="25dp"
        android:scaleType="fitXY" />

    <Button
        android:id="@+id/commodity_shopping_sub"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/edittext_background_buycount"
        android:layout_toRightOf="@+id/commodity_shopping_image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="-"
        android:textColor="@color/store_light_gary"
        android:textSize="@dimen/textSize_15"/>
    <TextView
        android:id="@+id/commodity_shopping_buycount"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@drawable/edittext_background_buycount"
        android:layout_toRightOf="@+id/commodity_shopping_sub"
        android:layout_marginTop="10dp"
        android:text="1"
        android:textColor="@color/store_black"
        android:textSize="@dimen/textSize_15"
        android:gravity="center"/>
    <Button
        android:id="@+id/commodity_shopping_plus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/edittext_background_buycount"
        android:layout_toRightOf="@+id/commodity_shopping_buycount"
        android:layout_marginTop="10dp"
        android:text="+"
        android:textColor="@color/store_light_gary"
        android:textSize="@dimen/textSize_15"/>

</RelativeLayout>