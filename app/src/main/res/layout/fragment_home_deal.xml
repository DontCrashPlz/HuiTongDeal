<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_black">

    <include layout="@layout/layout_toolbar" />

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/home_tly_dealtab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background_black_light"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="6dp"
        app:tl_iconGravity="LEFT"
        app:tl_iconMargin="5dp"
        app:tl_indicator_color="@color/background_blue"
        app:tl_indicator_gravity="BOTTOM"
        app:tl_indicator_height="1dp"
        app:tl_indicator_width="100dp"
        app:tl_textSelectColor="@color/background_blue"
        app:tl_textUnselectColor="@android:color/white"
        app:tl_textsize="@dimen/textSize_15"
        app:tl_divider_color="#101318"
        app:tl_divider_padding="15dp"
        app:tl_divider_width="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/background_black_light"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="名称"
            android:textSize="@dimen/textSize_14"
            android:textColor="@android:color/white"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="建仓价"
            android:textSize="@dimen/textSize_14"
            android:textColor="@android:color/white"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="平仓价"
            android:textSize="@dimen/textSize_14"
            android:textColor="@android:color/white"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="盈亏"
            android:textSize="@dimen/textSize_14"
            android:textColor="@android:color/white"
            android:gravity="center"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/home_vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>