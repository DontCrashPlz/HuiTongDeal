<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/edittext_background_white_corners_hollow">

    <TextView
        android:id="@+id/paypass_dialog_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请输入交易密码"
        android:textSize="@dimen/textSize_15"
        android:textColor="#333333"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#E5E5E5"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="13dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现数额"
            android:textColor="@color/store_black"
            android:textSize="@dimen/textSize_12"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/paypass_dialog_tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="12sp"
            android:textColor="@color/store_black"/>
    </LinearLayout>

    <com.zheng.zchlibrary.widgets.MyPayPsdInputView
        android:id="@+id/paypass_dialog_et_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:maxCount="6"
        app:strokeCorners="0dp"
        app:strokeWidth="1px"
        app:strokeColor="#CCCCCC"
        app:divideLineWidth="1px"
        app:divideLineColor="#CCCCCC"
        android:layout_marginTop="5dp"
        android:inputType="number"
        android:background="@null"/>

    <TextView
        android:id="@+id/paypass_dialog_btn_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码？"
        android:textSize="@dimen/textSize_12"
        android:textColor="#1B82D2"
        android:layout_gravity="right"
        android:padding="3dp"
        android:layout_marginRight="3dp"
        android:clickable="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/paypass_dialog_btn_cancel"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="取消"
            android:textColor="#333333"
            android:textSize="@dimen/textSize_15"
            android:background="@drawable/edittext_background_white_corners_hollow"
            android:layout_marginRight="30dp"/>
        <TextView
            android:id="@+id/paypass_dialog_btn_confirm"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="确定"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_15"
            android:background="@drawable/button_background_gary_corners"
            android:clickable="false"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>