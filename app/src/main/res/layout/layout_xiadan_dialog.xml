<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F6F6F6">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/close"
        android:layout_marginTop="-35dp"
        android:layout_alignParentRight="true"/>

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tixian_dialog_tab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tl_textSelectColor="#FF3F00"
        app:tl_textUnselectColor="#666666"
        app:tl_underline_color="#E5E5E5"
        app:tl_underline_height="1dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E5E5"
        android:layout_below="@+id/tixian_dialog_tab"/>

    <RelativeLayout
        android:id="@+id/tixian_dialog_panel_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tixian_dialog_tab"
        android:layout_marginTop="1dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">
        <TextView
            android:id="@+id/tixian_dialog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="普银合约"
            android:textSize="@dimen/textSize_15"
            android:textColor="#333333"
            android:paddingLeft="8dp"/>
        <TextView
            android:id="@+id/tixian_dialog_status"
            android:layout_width="80dp"
            android:layout_height="18dp"
            android:text="开盘"
            android:textSize="@dimen/textSize_12"
            android:textColor="@android:color/white"
            android:layout_below="@+id/tixian_dialog_name"
            android:background="#FF9800"
            android:layout_marginTop="5dp"
            android:gravity="center" />
        <TextView
            android:id="@+id/tixian_dialog_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textSize="@dimen/textSize_15"
            android:textColor="#03A303"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/subscription_01"
            android:drawablePadding="10dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E5E5"
        android:layout_below="@+id/tixian_dialog_panel_info"/>

    <TextView
        android:id="@+id/tixian_dialog_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择交易方式"
        android:textColor="#333333"
        android:textSize="@dimen/textSize_15"
        android:layout_below="@+id/tixian_dialog_panel_info"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="9dp"/>
    
    <RadioGroup
        android:id="@+id/tixian_dialog_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tixian_dialog_type"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="100"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="50"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="基础合约"/>
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E5E5"
        android:layout_below="@+id/tixian_dialog_radiogroup"/>

    <LinearLayout
        android:id="@+id/tixian_dialog_panel_shoushu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tixian_dialog_radiogroup"
        android:layout_marginTop="1dp"
        android:paddingTop="15dp"
        android:paddingLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手数:  "
            android:textColor="#333333"
            android:textSize="@dimen/textSize_15"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:textColor="#333333"
            android:textSize="@dimen/textSize_15"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(每手0.00 ， 最多可买100手)"
            android:textColor="#666666"
            android:textSize="@dimen/textSize_12"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/tixian_dialog_panel_shoushu">



    </RelativeLayout>

</RelativeLayout>