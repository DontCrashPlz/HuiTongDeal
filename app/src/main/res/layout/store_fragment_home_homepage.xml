<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.youth.banner.Banner
                android:id="@+id/homepage_banner"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="15:8"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:paddingTop="20dp">
            <TextView
                android:id="@+id/homepage_btn1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="法国馆"
                android:textSize="@dimen/textSize_11"
                android:textColor="@color/store_black"
                android:drawableTop="@mipmap/france"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:clickable="true"/>
            <TextView
                android:id="@+id/homepage_btn2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="智利馆"
                android:textSize="@dimen/textSize_11"
                android:textColor="@color/store_black"
                android:drawableTop="@mipmap/chile"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:clickable="true"/>
            <TextView
                android:id="@+id/homepage_btn3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="葡萄牙馆"
                android:textSize="@dimen/textSize_11"
                android:textColor="@color/store_black"
                android:drawableTop="@mipmap/portugal"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:clickable="true"/>
            <TextView
                android:id="@+id/homepage_btn4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="意大利馆"
                android:textSize="@dimen/textSize_11"
                android:textColor="@color/store_black"
                android:drawableTop="@mipmap/italy"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:clickable="true"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:paddingTop="15dp"
            android:paddingBottom="20dp">
            <TextView
                android:id="@+id/homepage_btn5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="龙井"
                android:textSize="@dimen/textSize_11"
                android:textColor="@color/store_black"
                android:drawableTop="@mipmap/tea1"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:clickable="true"/>
            <TextView
                android:id="@+id/homepage_btn6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="毛尖"
                android:textSize="@dimen/textSize_11"
                android:textColor="@color/store_black"
                android:drawableTop="@mipmap/tea2"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:clickable="true"/>
            <TextView
                android:id="@+id/homepage_btn7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="普洱"
                android:textSize="@dimen/textSize_11"
                android:textColor="@color/store_black"
                android:drawableTop="@mipmap/tea3"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:clickable="true"/>
            <TextView
                android:id="@+id/homepage_btn8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="白茶"
                android:textSize="@dimen/textSize_11"
                android:textColor="@color/store_black"
                android:drawableTop="@mipmap/tea4"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:clickable="true"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/homepage_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>
